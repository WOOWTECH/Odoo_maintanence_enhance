<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Portal users can only see equipment they are assigned to -->
        <record id="equipment_portal_rule" model="ir.rule">
            <field name="name">Portal: Equipment Access</field>
            <field name="model_id" ref="maintenance.model_maintenance_equipment"/>
            <field name="domain_force">[('portal_user_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Portal users can only see maintenance requests they are assigned to -->
        <record id="request_portal_rule" model="ir.rule">
            <field name="name">Portal: Maintenance Request Access</field>
            <field name="model_id" ref="maintenance.model_maintenance_request"/>
            <field name="domain_force">[('portal_user_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Portal users can read maintenance stages -->
        <record id="stage_portal_rule" model="ir.rule">
            <field name="name">Portal: Maintenance Stage Access</field>
            <field name="model_id" ref="maintenance.model_maintenance_stage"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Portal users can read equipment categories -->
        <record id="category_portal_rule" model="ir.rule">
            <field name="name">Portal: Equipment Category Access</field>
            <field name="model_id" ref="maintenance.model_maintenance_equipment_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
